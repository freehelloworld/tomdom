<%- model_class = Quote -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:enquiry_type) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:suburban) %></th>
      <th><%= model_class.human_attribute_name(:postcode) %></th>
      <th><%= model_class.human_attribute_name(:endofleaseclean) %></th>
      <th><%= model_class.human_attribute_name(:deephouse) %></th>
      <th><%= model_class.human_attribute_name(:afterbuilders) %></th>
      <th><%= model_class.human_attribute_name(:steamcarpet) %></th>
      <th><%= model_class.human_attribute_name(:movein) %></th>
      <th><%= model_class.human_attribute_name(:spring) %></th>
      <th><%= model_class.human_attribute_name(:regular) %></th>
      <th><%= model_class.human_attribute_name(:upholstery) %></th>
      <th><%= model_class.human_attribute_name(:premises_type) %></th>
      <th><%= model_class.human_attribute_name(:frequency) %></th>
      <th><%= model_class.human_attribute_name(:bedrooms) %></th>
      <th><%= model_class.human_attribute_name(:bathrooms) %></th>
      <th><%= model_class.human_attribute_name(:livingrooms) %></th>
      <th><%= model_class.human_attribute_name(:carpets) %></th>
      <th><%= model_class.human_attribute_name(:isfurnished) %></th>
      <th><%= model_class.human_attribute_name(:preferdate) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%= model_class.human_attribute_name(:media) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= link_to quote.id, quote_path(quote) %></td>
        <td><%= quote.enquiry_type %></td>
        <td><%= quote.name %></td>
        <td><%= quote.phone %></td>
        <td><%= quote.email %></td>
        <td><%= quote.address %></td>
        <td><%= quote.suburban %></td>
        <td><%= quote.postcode %></td>
        <td><%= quote.endofleaseclean %></td>
        <td><%= quote.deephouse %></td>
        <td><%= quote.afterbuilders %></td>
        <td><%= quote.steamcarpet %></td>
        <td><%= quote.movein %></td>
        <td><%= quote.spring %></td>
        <td><%= quote.regular %></td>
        <td><%= quote.upholstery %></td>
        <td><%= quote.premises_type %></td>
        <td><%= quote.frequency %></td>
        <td><%= quote.bedrooms %></td>
        <td><%= quote.bathrooms %></td>
        <td><%= quote.livingrooms %></td>
        <td><%= quote.carpets %></td>
        <td><%= quote.isfurnished %></td>
        <td><%= quote.preferdate %></td>
        <td><%= quote.comment %></td>
        <td><%= quote.media %></td>
        <td><%=l quote.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_quote_path(quote), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      quote_path(quote),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_quote_path,
            :class => 'btn btn-primary' %>
